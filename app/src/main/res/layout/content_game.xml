<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lucas.petanque_wrap_counter.activities.GameActivity"
    tools:showIn="@layout/app_bar_game">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game"
        android:textAppearance="@android:style/TextAppearance"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="30dp" />

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/tvTeam1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvTeam2"
            android:layout_alignBottom="@+id/tvTeam2"
            android:layout_alignStart="@+id/bTeam1"
            android:inputType="number"
            android:text="TextView"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvTeam2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/bTeam2"
            android:layout_alignParentTop="true"
            android:layout_marginTop="136dp"
            android:inputType="number"
            android:text="TextView"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bTeam1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="116dp"
            android:layout_marginStart="20dp"
            android:text="+1" />

        <Button
            android:id="@+id/bTeam2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bTeam1"
            android:layout_alignBottom="@+id/bTeam1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:text="+1" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
